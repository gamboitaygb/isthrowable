{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Hello!{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6 mx-auto">

                {{ form_start(form, {'attr': {'class': 'my-form-class basic'} }) }}

                <div class="form-group">
                    {{ form_widget(form.Person.name) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.Person.lastname) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.User.email) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.Person.description) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.User.passwordClear) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.Person.country) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.Person.photoPath) }}
                </div>
                {{ form_end(form) }}
                <p class="#mjs-error"></p>


            </div>
        </div>

    </div>
{% endblock %}
